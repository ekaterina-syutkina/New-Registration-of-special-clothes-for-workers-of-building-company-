            <ComboBoxItem Name="Gloves" Content="Перчатки" Selected="ComboBoxItem_Selected_4"/>
            <ComboBoxItem Name="S_J" Content="Рабочая куртка(летняя)" Selected="ComboBoxItem_Selected_5"/>
            <ComboBoxItem Name="W_J" Content="Рабочая куртка(зимняя)" Selected="ComboBoxItem_Selected_6"/>
            <ComboBoxItem Name="W_P" Content="Рабочие штаны (зимние)" Selected="ComboBoxItem_Selected_7"/>
            <ComboBoxItem Name="S_P" Content="Рабочие штаны (летние)" Selected="ComboBoxItem_Selected_8"/>
