        <Label x:Name="Order_clothes" Content="Заказать одежду " HorizontalAlignment="Left" Margin="51,308,0,328" Width="263" FontSize="21.333"/>
        <Label x:Name="lnstruction_label" Content="Чтобы оформить заказ выберите из списка спецодежду, которую хотите заказать. укажите дату заявкии и нажмите кнопку &quot;заказать одежду &quot;" HorizontalAlignment="Left" Height="41" Margin="51,389,0,0" VerticalAlignment="Top" Width="808"/>
        <Label x:Name="my_orders_label" Content="мои заказы" HorizontalAlignment="Left" Height="34" Margin="897,353,0,0" VerticalAlignment="Top" Width="245" FontSize="16"/>
        <ListBox x:Name="My_orders" HorizontalAlignment="Left" Height="88" Margin="859,411,0,0" VerticalAlignment="Top" Width="331"/>
        <DatePicker x:Name="Choose_date" HorizontalAlignment="Left" Height="40" Margin="461,459,0,0" VerticalAlignment="Top" Width="241"/>

