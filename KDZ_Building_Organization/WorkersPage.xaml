        <Label x:Name="Summer_Pans_label" HorizontalAlignment="Left" Height="27" Margin="705,256,0,0" VerticalAlignment="Top" Width="195" Content="Рабочие штаны  (летние)"/>
        <Label x:Name="Summer_Pans_label1" HorizontalAlignment="Left" Height="27" Margin="705,296,0,0" VerticalAlignment="Top" Width="195" Content="Рабочие штаны (зимние)"/>
        <TextBox x:Name="Gloves_time" HorizontalAlignment="Left" Height="23" Margin="930,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
        <TextBox x:Name="Summer_shues_time" HorizontalAlignment="Left" Height="23" Margin="930,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>
